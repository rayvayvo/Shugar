    <div id="pageindex">
    <% if url > 1 %>
      <%= link_to "<<", '/portraits' %>
      <%= link_to "<", "/portraits/#{url - 1}" %>
    <% else %>
      << <
    <% end %>

    <%= "page #{url} / #{(portraits_total.count.to_f/9).ceil}" %>

    <% if url < (portraits_total.count.to_f/9).ceil %>
      <%= link_to ">", "/portraits/#{url + 1}" %>
      <%= link_to ">>", "/portraits/#{(portraits_total.count.to_f/9).ceil}"%>
    <% else %>
     > >>
    <% end %>
  </div>
 </section>