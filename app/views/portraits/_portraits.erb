

<section id="slideshow">
<% url = request.url.last.to_i %>
<% if url == 0
 url = 1
 end  %>
<% portraits = Gallery.where(media_type:  'portrait').offset((url * 9) -9)%>
<% portraits_total = Gallery.where(media_type:  'portrait')%>

