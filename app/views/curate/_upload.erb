  <section id= "uploader">
  <div id="upload">Upload</div>


<%= form_for @gallery do |f| %>
  <% if @gallery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gallery.errors.count, "error") %> image save failed:</h2>

      <ul>
      <% @gallery.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :medium %><br>
    <%= f.text_area :medium %>
  </div>
  <div class="field">
    <%= f.label :media_type %><br>
    <%= f.select :media_type, ([['Painting', 'paint'], ['Portrait', 'portrait'], ['Mixed Media', 'mixed'] ]) %>
  </div>
  <div class="field">
    <%= f.label :size %><br>
    <%= f.text_area :size %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

  </section>