    <div id="pageindex">
    <% if url > 1 %>
      <%= link_to "<<", '/mixed_media' %>
      <%= link_to "<", "/mixed_media/#{url - 1}" %>
    <% else %>
      << <
    <% end %>

    <%= "page #{url} / #{(mixed_media_total.count.to_f/9).ceil}" %>

    <% if url < (mixed_media_total.count.to_f/9).ceil %>
      <%= link_to ">", "/mixed_media/#{url + 1}" %>
      <%= link_to ">>", "/mixed_media/#{(mixed_media_total.count.to_f/9).ceil}"%>
    <% else %>
     > >>
    <% end %>
  </div>
 </section>