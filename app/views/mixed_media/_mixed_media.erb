

<section id="slideshow">

<% url = request.url.last.to_i %>
<% if url == 0
 url = 1
 end  %>
<% mixed_media = Gallery.where(media_type:  'mixed').offset((url * 9) -9)%>
<% mixed_media_total = Gallery.where(media_type:  'mixed')%>


  <div id="row1">
    <div class="slideshow_image" id="ss1">
      <% if mixed_media[0] %>
        <%= image_tag "#{mixed_media[0].title}.jpg"%>
      <% end %>
    </div>
